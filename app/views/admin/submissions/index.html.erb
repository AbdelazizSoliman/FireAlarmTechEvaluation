<div class="p-8">
  <h1 class="text-3xl font-bold mb-6">Submissions</h1>
  <table class="min-w-full table-auto bg-white shadow overflow-hidden rounded-lg">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">When</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Supplier</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Subsystem</th>
        <th class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100">
      <% @notifications.each do |n| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
            <%= n.created_at.strftime("%Y-%m-%d %H:%M") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
            <%= n.title.split(" by ").last %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
            <% data = JSON.parse(n.additional_data) %>
            <%= data.values.first["subsystem_id"] %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
            <%= link_to "View", admin_submission_path(n), class: "text-indigo-600 hover:text-indigo-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
