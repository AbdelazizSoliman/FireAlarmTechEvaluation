<% content_for(:auth_header) do %>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Create your account</h2>
  <p class="mt-2 text-center text-sm text-gray-600">
    Have an account already?
    <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="relative mb-6">
    <%= f.text_field :first_name, autofocus: true, class: input_class , placeholder:""%>
    <%= f.label :first_name, class: label_class %>
  </div>

  <div class="relative mb-6">
    <%= f.text_field :last_name, autofocus: true, class: input_class , placeholder:""%>
    <%= f.label :last_name, class: label_class %>
  </div>

  <div class="relative mb-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class, placeholder:""%>
    <%= f.label :email, class: label_class %>
  </div>

  <div class="relative mb-6">
    <%= f.password_field :password, autocomplete: "new-password", class: input_class, placeholder:"" %>
    <%= f.label :password, class: label_class %>
  </div>

  <div class="relative mb-6">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_class, placeholder:"" %>
    <%= f.label :password_confirmation, class: label_class %>
  </div>

  <div>
    <%= f.submit "Sign up", class: form_button_class %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>