<% content_for(:auth_header) do %>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign in</h2>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: "false"}) do |f| %>
  
  <div class="relative mb-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class , placeholder:""%>
    <%= f.label :email, class: label_class %>
  </div>

  <div class="relative mb-6">
    <%= f.password_field :password, autocomplete: "current-password", class: input_class, placeholder:"" %>
    <%= f.label :password, class: label_class %>
  </div>

  <div class="flex items-center justify-between mb-6">
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-gray-600 focus:ring-gray-500" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
      </div>
    <% end %>


    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="text-sm">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-formLabel-600 hover:text-formLabel-500" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.submit "Log in", class: form_button_class %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>