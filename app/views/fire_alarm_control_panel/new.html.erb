<%= form_with model: @fire_alarm_control_panel, local: true do |form| %>
    <h1 class="text-xl font-semibold">Create New Fire Alarm Control Panel</h1>
  
    <div class="mb-4">
      <%= form.label :subsystem_id, "Subsystem" %>
      <%= form.collection_select :subsystem_id, Subsystem.all, :id, :name, prompt: "Select a Subsystem", class: "form-select w-full" %>
    </div>
  
    <% FireAlarmControlPanel.column_names.each do |column| %>
      <% next if %w[id subsystem_id created_at updated_at].include?(column) %>
      <div class="mb-4">
        <%= form.label column, column.humanize %>
        <%= form.text_field column, class: "form-input w-full" %>
      </div>
    <% end %>
  
    <div class="mt-4">
      <%= form.submit "Create Fire Alarm Control Panel", class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
    </div>
  <% end %>
  