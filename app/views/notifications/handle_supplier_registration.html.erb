<h1>Assign Membership and Permissions</h1>
<%= form_with url: assign_membership_supplier_path(@supplier), method: :post, local: true do |form| %>
  <div class="mb-4">
    <h2>Membership Type</h2>
    <%= form.radio_button :membership_type, "gold" %>
    <%= form.label :membership_type_gold, "Gold Membership" %>
    <br>
    <%= form.radio_button :membership_type, "silver" %>
    <%= form.label :membership_type_silver, "Silver Membership" %>
  </div>

  <div id="gold-options" style="display: none;">
    <h3>Select Accessible Projects</h3>
    <%= form.collection_check_boxes :project_ids, Project.all, :id, :name %>
  </div>

  <div id="silver-options" style="display: none;">
    <h3>Select Accessible Subsystems</h3>
    <%= form.collection_check_boxes :subsystem_ids, Subsystem.all, :id, :name %>
  </div>

  <div class="mb-4">
    <h2>Evaluation Report Preference</h2>
    <%= form.radio_button :receive_evaluation_report, true %>
    <%= form.label :receive_evaluation_report, "Receive Report" %>
    <br>
    <%= form.radio_button :receive_evaluation_report, false %>
    <%= form.label :receive_evaluation_report, "Do Not Receive Report" %>
  </div>

  <div>
    <%= form.submit "Approve and Assign", class: "btn btn-primary" %>
  </div>
<% end %>
