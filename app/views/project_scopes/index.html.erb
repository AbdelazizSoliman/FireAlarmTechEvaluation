<h1 class="text-xl font-bold">Project Scopes for <%= @project.name %></h1>

<div class="mb-4">
  <%= link_to "Add New Project Scope", new_project_project_scope_path(@project), class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
</div>

<table class="min-w-full divide-y divide-gray-200 border border-gray-200 rounded-lg">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @project_scopes.each do |scope| %>
      <tr>
        <td class="px-6 py-4"><%= scope.name %></td>
        <td class="px-6 py-4">
          <%= link_to "View", project_project_scope_path(@project, scope), class: "text-blue-500 hover:underline" %>
          <%= link_to "Edit", edit_project_project_scope_path(@project, scope), class: "text-green-500 hover:underline ml-4" %>
          <%= link_to "Delete", project_project_scope_path(@project, scope), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline ml-4" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
