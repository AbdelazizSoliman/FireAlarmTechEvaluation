<h1 class="text-xl font-bold">Project Scope: <%= @project_scope.name %></h1>

<h2 class="text-lg font-semibold mt-6">Systems</h2>
<div>
  <% @project_scope.systems.each do |system| %>
    <div class="mb-4">
      <h3 class="text-md font-semibold"><%= system.name %></h3>
      <%= link_to "View #{system.name}", project_scope_system_path(@project_scope, system), class: "bg-blue-500 text-white py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
