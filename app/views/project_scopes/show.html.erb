<h1 class="text-xl font-bold">Project Scope: <%= @project_scope.name %></h1>

<p class="mt-2">
  <strong>Project:</strong>
  <%= link_to @project_scope.project.name, project_path(@project_scope.project), class: "text-blue-500 hover:underline" %>
</p>

<h2 class="text-lg font-semibold mt-4">Systems</h2>
<% if @project_scope.systems.any? %>
  <ul class="list-disc pl-5 mt-2">
    <% @project_scope.systems.each do |system| %>
      <li class="mb-2">
        <%= link_to system.name, project_project_scope_system_path(@project_scope.project, @project_scope, system), class: "text-blue-500 hover:underline" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="mt-2 text-gray-600">No systems associated with this project scope yet.</p>
<% end %>

<div class="mt-4">
  <%= link_to "Add New System", new_project_project_scope_system_path(@project_scope.project, @project_scope), class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
  <%= link_to "Back to Project Scopes", project_project_scopes_path(@project_scope.project), class: "ml-2 bg-gray-500 hover:bg-gray-600 text-white py-2 px-4 rounded" %>
</div>