<div class="overflow-x-auto">
<div class="bg-white shadow rounded-lg p-6" data-controller="tabs">
<h2 class="text-xl font-semibold text-gray-900">Projects</h2>
<div class="my-4 flex justify-between items-center">

<%= link_to "Add New Project", new_project_path, class: "bg-buttonRed text-white py-2 px-4 rounded ml-4" %>  
</div>
</div>
  <table class="min-w-full divide-y divide-gray-200 border border-gray-200 rounded-full">
  <thead class="bg-tableHeaderBg">
    <tr>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Details</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fire Alarm Control Panel</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Graphic System</th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
    </tr>
  </thead>
<tbody class="bg-white divide-y divide-gray-200">
  <% @projects.each do |project| %>
    <tr class="hover:bg-tableRowHoverBg">
      <!-- Product Details -->
      <td class="px-6 py-4 whitespace-nowrap">
        <div class="text-sm text-gray-500">
          <strong>Product Name:</strong> <%= project.product&.product_name %><br>
          <strong>Country of Origin:</strong> <%= project.product&.country_of_origin %><br>
          <strong>Manufacture (FC):</strong> <%= project.product&.country_of_manufacture_mfacp %><br>
          <strong>Manufacture (Detectors):</strong> <%= project.product&.country_of_manufacture_detectors %>
        </div>
      </td>

      <!-- Fire Alarm Control Panel -->
      <td class="px-6 py-4 whitespace-nowrap">
        <div class="text-sm text-gray-500">
          <strong>MFCAP:</strong> <%= project.fire_alarm_control_panel&.mfacp %><br>
          <strong>Standards:</strong> <%= project.fire_alarm_control_panel&.standards %><br>
          <strong>Total No of Panels:</strong> <%= project.fire_alarm_control_panel&.total_no_of_panels %><br>
          <strong>Spare Loops:</strong> <%= project.fire_alarm_control_panel&.total_no_of_spare_loops %><br>
          <strong>Backup Time:</strong> <%= project.fire_alarm_control_panel&.backup_time %>
        </div>
      </td>

      <!-- Graphic System -->
      <td class="px-6 py-4 whitespace-nowrap">
        <div class="text-sm text-gray-500">
          <strong>Workstation:</strong> <%= project.graphic_system&.workstation %><br>
          <strong>Control Feature:</strong> <%= project.graphic_system&.workstation_control_feature %><br>
          <strong>Softwares:</strong> <%= project.graphic_system&.softwares %><br>
          <strong>Licenses:</strong> <%= project.graphic_system&.licenses %><br>
          <strong>Screens:</strong> <%= project.graphic_system&.screens %>
        </div>
      </td>

      <!-- Action -->
      <td class="px-6 py-4 whitespace-nowrap flex items-center space-x-4">
        <%= link_to project_path(project), class: "text-red-600 hover:text-red-900 flex items-center space-x-1" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
        <% end %>

        <%= link_to edit_project_path(project), data: { turbo_frame: "modal" }, class: "text-red-600 hover:text-red-900 flex items-center space-x-1" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>

        <%= button_to project_path(project), method: :delete, class: "text-red-600 hover:text-red-900 flex items-center space-x-1", form: { data: { turbo_confirm: 'Are you sure?' } } do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>

  </table>
</div>
