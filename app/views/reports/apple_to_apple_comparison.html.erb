<div class="bg-gray-100 p-6 rounded-lg shadow-md max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">
    Generate Apple to Apple Comparison
  </h1>

  <!-- The form posts to apple_to_apple_comparison_reports_path -->
  <form action="<%= apple_to_apple_comparison_reports_path %>" method="get" data-turbo="false">
    <!-- Subsystem Dropdown Filter -->
    <div class="mb-4 flex items-center space-x-2">
      <label for="subsystem_id" class="block font-semibold mb-1">
        Choose Subsystem (for Excel Comparison):
      </label>
      <%= select_tag :subsystem_id,
          options_from_collection_for_select(
            Subsystem.all, :id, :name, @subsystem_id
          ),
          include_blank: "Select Subsystem",
          class: "border rounded px-2 py-1" %>

      <!-- Filter button (reâ€renders the form) -->
      <button type="submit" name="commit" value="filter"
              class="px-3 py-2 bg-gray-400 text-white rounded hover:bg-gray-500">
        Filter
      </button>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full table-auto bg-white rounded-lg shadow-md">
        <thead class="bg-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Select</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Supplier Name</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Subsystem</th>
          </tr>
        </thead>
        <tbody class="text-sm text-gray-700">
          <% @suppliers_with_subsystems.each do |supplier| %>
            <!-- Filter the subsystem if @subsystem_id is present -->
            <% if @subsystem_id.present? %>
              <% numeric_id = @subsystem_id.to_i %>
              <% filtered_subsystems = supplier.approved_subsystems.select { |sub| sub.id == numeric_id } %>
            <% else %>
              <% filtered_subsystems = supplier.approved_subsystems %>
            <% end %>
            <% next if filtered_subsystems.empty? %>

            <% filtered_subsystems.each do |subsystem| %>
              <tr class="border-t">
                <td class="px-6 py-3">
                  <input type="checkbox" name="selected_suppliers[]" value="<%= supplier.id %>">
                </td>
                <td class="px-6 py-3 font-semibold">
                  <%= supplier.supplier_name %>
                </td>
                <td class="px-6 py-3">
                  <%= link_to subsystem.name,
                      evaluation_data_reports_path(supplier_id: supplier.id, subsystem_id: subsystem.id),
                      class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-6 flex justify-center space-x-4">
      <!-- 'Generate Comparison' => commit=generate -->
      <button type="submit" name="commit" value="generate"
              class="p-3 bg-red-600 rounded-md text-white hover:bg-red-700">
        Generate Comparison
      </button>

      <!-- 'Show Comparison' => commit=show -->
      <button type="submit" name="commit" value="show"
              class="p-3 bg-blue-600 rounded-md text-white hover:bg-blue-700">
        Show Comparison
      </button>
    </div>
  </form>
</div>
