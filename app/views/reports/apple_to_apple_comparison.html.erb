<div class="bg-gray-100 p-6 rounded-lg shadow-md max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Generate Apple to Apple Comparison</h1>

  <form action="<%= generate_comparison_report_reports_path %>" method="get">
    <div class="overflow-x-auto">
      <table class="min-w-full table-auto bg-white rounded-lg shadow-md">
        <thead class="bg-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Select</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Supplier Name</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Subsystem</th>
          </tr>
        </thead>
        <tbody class="text-sm text-gray-700">
          <% @suppliers_with_subsystems.each do |supplier| %>
            <tr class="border-t">
              <td class="px-6 py-3">
                <input type="checkbox" name="selected_suppliers[]" value="<%= supplier.id %>">
              </td>
              <td class="px-6 py-3 font-semibold"><%= supplier.supplier_name %></td>
              <td class="px-6 py-3">
                <ul class="space-y-2">
                  <% supplier.subsystems.each do |subsystem| %>
                    <li><%= subsystem.name %></li>
                  <% end %>
                </ul>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-6 flex justify-center">
      <button type="submit" class="p-3 bg-red-600 rounded-md hover:text text-white">
        Generate Comparison
      </button>
    </div>
  </form>
</div>
