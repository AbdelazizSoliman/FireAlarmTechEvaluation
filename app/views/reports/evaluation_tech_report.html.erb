<div class="bg-gray-100 p-6 rounded-lg shadow-md max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Generate Evaluation/Tech. Report</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full table-auto bg-white rounded-lg shadow-md">
      <thead class="bg-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Supplier Name</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Subsystems</th>
        </tr>
      </thead>
      <tbody class="text-sm text-gray-700">
        <% @suppliers_with_subsystems.each do |supplier| %>
          <tr class="border-t">
            <td class="px-6 py-3 font-semibold"><%= supplier.supplier_name %></td>
            <td class="px-6 py-3">
              <ul class="space-y-2">
                <% supplier.approved_subsystems.each do |subsystem| %>
                  <li>
                    <%= link_to subsystem.name, evaluation_data_reports_path(supplier_id: supplier.id, subsystem_id: subsystem.id), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                  </li>
                <% end %>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
