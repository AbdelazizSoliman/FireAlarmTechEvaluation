<h2>Excel Data Management</h2>

<!-- Edit Requirements button -->
<%= link_to "Edit Requirements", "#", class: "btn btn-primary mb-3", id: "edit-requirements-button" %>

<%= form_with url: requirements_data_path, method: :post do %>
  <% @sheets_data.each do |sheet_name, rows| %>
    <h3><%= sheet_name %></h3>
    <table border="1">
      <tr>
        <th>Column 1</th>
        <th>Column 2</th>
        <th>Column 3</th>
        <!-- Add more <th> as needed -->
      </tr>

      <% rows.each_with_index do |row, row_index| %>
        <tr>
          <% row.each do |col_num, value| %>
            <% numeric_col = col_num.to_i %>
            <td>
              <%= text_field_tag "sheets_data[#{sheet_name}][#{row_index}][#{col_num}]", value,
                readonly: true,                      # Make all fields readonly by default
                data: { col_num: numeric_col },       # Add data attribute for JavaScript targeting
                class: "editable-field w-full" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <br>
  <% end %>

  <%= submit_tag "Update Excel", class: "btn btn-success" %>
<% end %>

<!-- Download Button -->
<br>
<%= link_to "Download Updated Excel", download_requirements_data_path, class: "btn btn-secondary" %>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const editButton = document.getElementById("edit-requirements-button");
    const fields = document.querySelectorAll(".editable-field");

    editButton.addEventListener("click", (e) => {
      e.preventDefault();

      fields.forEach(field => {
        // Only remove readonly for columns other than column 1
        if (field.dataset.colNum !== "1") {
          field.removeAttribute("readonly");
        }
      });
    });
  });
</script>
