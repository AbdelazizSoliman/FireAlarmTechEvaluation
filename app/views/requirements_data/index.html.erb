<h2>Excel Data Management</h2>

<!-- Edit Requirements button -->
<%= link_to "Edit Requirements", "#", class: "btn btn-primary mb-3", id: "edit-requirements-button" %>

<%= form_with url: requirements_data_path, method: :post do %>
  <% @sheets_data.each do |sheet_name, rows| %>
    <h3><%= sheet_name %></h3>
    <table border="1">
      <tr>
        <th>Column 1</th>
        <th>Column 2</th>
        <th>Column 3</th>
        <!-- Add more <th> as needed for extra columns -->
      </tr>

      <% rows.each_with_index do |row, row_index| %>
        <tr>
          <% row.each do |col_num, value| %>
            <% # Convert col_num to integer for comparisons %>
            <% numeric_col = col_num.to_i %>

            <td>
              <%= text_field_tag(
                "sheets_data[#{sheet_name}][#{row_index}][#{col_num}]",
                value,
                # Disable all columns initially
                disabled: true,
                # Add a data attribute to know which column we're in
                "data-col-num": numeric_col,
                # A CSS class to target these fields with JavaScript
                class: "editable-field w-full"
              ) %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <br>
  <% end %>

  <%= submit_tag "Save Changes", class: "btn btn-success" %>
<% end %>

<!-- Download Button -->
<br>
<%= link_to "Download Requirements", download_requirements_data_path, class: "btn btn-secondary" %>

<!-- JavaScript to enable editing of columns 2+ on button click -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const editButton = document.getElementById("edit-requirements-button");
    const fields = document.querySelectorAll(".editable-field");

    editButton.addEventListener("click", (e) => {
      e.preventDefault();

      fields.forEach(field => {
        // data-col-num is a string, so convert or compare as string
        // Column 1 must remain disabled
        if (field.dataset.colNum !== "1") {
          field.disabled = false; // Enable columns 2, 3, etc.
        }
      });
    });
  });
</script>
