<h2>Excel Data Management</h2>

<%= form_with url: requirements_data_path, method: :post do %>
  <% @sheets_data.each do |sheet_name, rows| %>
    <h3><%= sheet_name %></h3>
    <table border="1">
    <tr>
    <th>Column 1</th>
    <th>Column 2</th>
    <th>Column 3</th>
  </tr>

      <% rows.each_with_index do |row, row_index| %>
        <tr>
          <% row.each do |col_num, value| %>
            <td><%= text_field_tag "sheets_data[#{sheet_name}][#{row_index}][#{col_num}]", value %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
    <br>
  <% end %>

  <%= submit_tag "Update Excel", class: "btn btn-primary" %>
<% end %>

