<h1 class="text-xl font-bold">Subsystems</h1>

<div class="mb-4">
  <%= link_to "Add New Subsystem", new_subsystem_path, class: 'bg-blue-500 text-white py-2 px-4 rounded' %>
</div>

<% if @subsystems.any? %>
  <table class="min-w-full bg-white border mt-4">
    <thead>
      <tr class="bg-gray-200">
        <th class="py-2 px-4 border">Name</th>
        <th class="py-2 px-4 border">System</th>
        <th class="py-2 px-4 border">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @subsystems.each do |subsystem| %>
        <tr>
          <td class="py-2 px-4 border">
            <%= link_to subsystem.name, subsystem_path(subsystem), class: "text-blue-500 hover:underline" %>
          </td>
          <td class="py-2 px-4 border">
            <%= subsystem.system.name if subsystem.system %>
          </td>
          <td class="py-2 px-4 border">
            <%= link_to "View", subsystem_path(subsystem), class: "bg-blue-500 text-white py-1 px-2 rounded" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="mt-2 text-gray-600">No subsystems found.</p>
<% end %>