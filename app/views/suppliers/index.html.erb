<!-- app/views/pages/suppliers.html.erb -->
  <div class="bg-white shadow rounded-lg p-6" data-controller="tabs">
    <h2 class="text-xl font-semibold text-gray-900">Suppliers</h2>
    <div class="my-4 flex justify-between items-center">
      <div>
        <%= form_with url: search_suppliers_path, method: :get, local: true, class: "flex items-center" do |f| %>
            <%= f.text_field :query, placeholder: "Search by name...", class: "form-input rounded-md border border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-gray-500" %>
        <% end %>
      </div>
      <%= link_to "Add New Supplier", new_supplier_path, class: "bg-buttonRed text-white py-2 px-4 rounded ml-4" %>  
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 border border-gray-200 rounded-full">
        <thead class="bg-tableHeaderBg">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Supplier Name
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Supplier Category
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Total Years In Saudi Market
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Phone
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Supplier Email
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @suppliers.each do |supplier| %>
            <tr class="hover:bg-tableRowHoverBg">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= supplier.supplier_name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500"><%= supplier.supplier_category %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500"><%= supplier.total_years_in_saudi_market %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500"><%= supplier.phone %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500"><%= supplier.supplier_email %></div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

