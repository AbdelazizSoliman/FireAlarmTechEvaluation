<h1 class="text-xl font-bold">Systems in Scope: <%= @project_scope.name %></h1>

<div class="mb-4">
  <%= link_to "Add New System", new_project_project_scope_system_path(@project, @project_scope), class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
</div>

<ul>
  <% @systems.each do |system| %>
    <li class="mb-2">
      <%= link_to system.name, project_project_scope_system_path(@project, @project_scope, system), class: "text-blue-500 hover:text-blue-700" %>
    </li>
  <% end %>
</ul>
