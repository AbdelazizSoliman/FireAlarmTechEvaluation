<h1 class="text-xl font-bold">System: <%= @system.name %> in Project: <%= @system.project_scope.project.name %></h1>
<h2 class="text-lg font-semibold mt-6">Subsystems</h2>
<ul>
  <% @subsystems.each do |subsystem| %>
    <li>
      <% if subsystem.name == "FIRE ALARM" %>
        <!-- For FIRE ALARM, link to /requirements_data -->
        <%= link_to subsystem.name, requirements_data_path, class: "text-blue-500 hover:underline" %>
      <% else %>
        <!-- For everything else, link to the normal subsystem show page -->
        <%= link_to subsystem.name, subsystem_path(subsystem), class: "text-blue-500 hover:underline" %>
      <% end %>
    </li>
  <% end %>
</ul>
